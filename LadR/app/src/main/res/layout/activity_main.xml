<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97446593"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/activity_main_welcome_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:text="Welcome to the LadR network! \n register your personal information to be able to continue"
        />



    <EditText
        android:id="@+id/activity_main_first_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:hint="Tap your first name here"/>

    <EditText
        android:id="@+id/activity_main_last_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:hint="Tap your last name here"/>


    <EditText
        android:id="@+id/activity_main_license_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:hint="Tap your license plate number here"/>

    <TextView
        android:id="@+id/activity_main_spinner_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Select your car model here :"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/car_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/activity_main_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center"
        android:background="#419EDD"
        android:textColor="#bbffffff"
        android:padding="20dp"
        android:layout_marginTop="40dp"/>

</LinearLayout>