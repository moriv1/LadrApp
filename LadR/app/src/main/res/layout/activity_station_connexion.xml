<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97446593"
    android:orientation="vertical"
    tools:context=".StationConnexionActivity">




    <TextView
        android:id="@+id/activity_warning_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#bbffffff"
        android:textSize="20sp"
        android:text="Do not leave the connection while the connection is in progress. "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="236dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:cropToPadding="false"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/wifi" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="268dp"
        android:layout_height="178dp"
        android:layout_gravity="center"
        android:background="@drawable/blue"/>
    <Button
        android:id="@+id/activity_ClientToStationConnexion_btn"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="#419EDD"
        android:padding="20dp"
        android:text="Start Communication"
        android:textColor="#bbffffff" />

    <TextView
        android:id="@+id/client_number_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />


    <TextView
        android:id="@+id/activation_key_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>